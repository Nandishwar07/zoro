public class PrimeChecker {

    public static boolean isPrimeBruteForce(int number) {
        // Numbers less than or equal to 1 are not prime
        if (number <= 1) {
            return false;
        }

        // Iterate from 2 up to (number - 1)
        for (int i = 2; i < number; i++) {
            // If the number is divisible by 'i', it's not prime
            if (number % i == 0) {
                return false;
            }
        }

        // If no divisors are found, the number is prime
        return true;
    }

    public static void main(String[] args) {
        int num1 = 7;
        int num2 = 10;
        int num3 = 1;
        int num4 = 29;

        System.out.println(num1 + " is prime: " + isPrimeBruteForce(num1)); // true
        System.out.println(num2 + " is prime: " + isPrimeBruteForce(num2)); // false
        System.out.println(num3 + " is prime: " + isPrimeBruteForce(num3)); // false
        System.out.println(num4 + " is prime: " + isPrimeBruteForce(num4)); // true
    }
}
